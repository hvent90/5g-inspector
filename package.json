{
  "name": "tmobile-dashboard",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run infra:up && bun run dev:app",
    "dev:app": "bun run --filter '*' dev",
    "dev:web": "bun run --filter @tmobile-dashboard/web dev",
    "build": "bun run --filter '*' build",
    "build:web": "bun run --filter @tmobile-dashboard/web build",
    "lint": "bun run --filter '*' lint",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun run --filter '*' test",
    "infra:up": "podman compose -f infra/docker-compose.yml up -d",
    "infra:down": "podman compose -f infra/docker-compose.yml down",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}

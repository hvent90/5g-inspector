    "@effect/platform-bun": "0.87.0",
    "@effect/sql": "0.49.0",
    "@effect/sql-pg": "0.50.1",
    "@netpulse/shared": "workspace:*",
    "effect": "3.19.14"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "postgres": "3.4.8",
    "typescript": "^5.3.0"
  }
}
